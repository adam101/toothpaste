= form_for @patient do |f|
  = f.label :first_name
  = f.text_field :first_name

  = f.label :last_name
  = f.text_field :last_name

  = f.label :address
  = f.text_field :address

  = f.label :zip
  = f.text_field :zip

  = f.label :city
  = f.text_field :city

  = f.label :birthday
  = f.text_field :birthday

  = f.label :social_security_number
  = f.text_field :social_security_number

  = f.label :email
  = f.text_field :email

  = f.label :phone_number
  = f.text_field :phone_number

  = f.label :gender
  = f.select :gender, Patient::VALID_GENDERS

  - if @doctors
    = f.label :doctor
    = f.select :user, @doctors

  = f.submit
